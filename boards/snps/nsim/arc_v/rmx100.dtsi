#include "rmx1xx.dtsi"

/ {
	/* Instruction Closely Coupled Memory */
	iccm0: iccm@0 {
		compatible = "zephyr,memory-region", "mmio-sram";
		zephyr,memory-region = "FLASH";
		zephyr,memory-region-flags = "rx";
		reg = <0x0 0x40000>; /* 256 KB ICCM */
	};

	/* Data Closely Coupled Memory */
	dccm0: dccm@80000000 {
		compatible = "zephyr,memory-region", "mmio-sram";
		zephyr,memory-region = "SRAM";
		zephyr,memory-region-flags = "rw";
		device_type = "memory";
		reg = <0x80000000 0x40000>; /* 256 KB DCCM */
	};
};
